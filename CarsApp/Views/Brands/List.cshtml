@model IEnumerable<CarsApp.Models.Database.Brand>
@{
    Layout = null;
}
<table class="table">
    <thead>
        <tr>
           @* <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>   
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model) {
                var style = string.Empty;
                if (item.IsActive == false) style = "style=opacity:0.5";
            <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>*@
            <td @style>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Отредактировать</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Подробнее</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    Нету записей
                </td>
            </tr>
        }
    </tbody>
</table>