@model CarsApp.Models.Database.Model
@inject CarsApp.Models.Database.CarsAppContext context;

@{
    ViewData["Title"] = "Добавление модели";
}

<h4>Модель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for=BrandId selected="@Model?.BrandId">
                    @foreach (var brand in context.Brands.AsEnumerable())
                    {
                        <option value="@brand.Id">@brand.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index">Вернуться к списку</a>
</div>